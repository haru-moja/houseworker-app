<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration_main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="form-text">ニックネーム</label><br>
    <%= f.text_field :nickname, autofocus: true, placeholder: "あだ名" %>
  </div>
  <div class="field">
    <label class="form-text">名字</label><br>
    <%= f.text_field :last_name, autofocus: true, placeholder: "みょうじ" %>
  </div>
  <div class="field">
    <label class="form-text">名前</label><br>
    <%= f.text_field :first_name, autofocus: true, placeholder: "なまえ" %>
  </div>

  <div class="field">
    <label class="form-text">Email</label><br>
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <label class="form-text">パスワード</label><br>
    <span class="indispensable">必須</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autofocus: true, placeholder: "パスワード" %>
  </div>

  <div class="field">
    <label class="form-text"></label>パスワード<br>
    <span class="indispensable">必須 (確認用)</span><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力してください" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>