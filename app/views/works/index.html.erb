<%= render "shared/header" %>
<div class="work_buton">
<%= link_to 'お仕事発注', new_work_path, class: "work-up" %>
</div>
<% if @works %>
  <div class="works_index">
    <% @works.each do |work| %>
      <div class="work_contents">
        <%= work.title %> <br>
        <% if work.images.count > 0 %>
            <%= link_to image_tag(work.images.first.variant(resize: "150x150").processed),work_path(work.id), class: "won" %> <br>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
<p id="notice"><%= notice %></p>

<h1>自分の日記</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', work_path(work.id) %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy',"#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '日記をかく', "#" %>

<%= month_calendar events: @works do |date, works| %>
  <%= date.day %>

  <% works.each do |work| %>
    <div>
      <%= link_to work.title, work_path(work.id) %>
    </div>
  <% end %>
<% end %>
